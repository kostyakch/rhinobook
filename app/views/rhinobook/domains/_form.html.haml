= form_for([@book, @domain]) do |f| 
	- if f.object.new_record?
		%legend= "#{t(:_NEW)} Domain"
	- else
		%legend= "#{t(:_EDIT)} \"#{@domain.name}\""
	= render 'shared/error_messages', object: f.object

	.row-fluid
		.span3
			= f.label :name, class: 'control-label'
			.controls
				= f.text_field :name, class: 'span12'

		.span2
			= f.label :locale, class: 'control-label'
			.controls
				= f.select :locale, I18n.available_locales, class: 'span12'

		.span1
			= f.label :active, class: 'control-label'
			.controls
				= f.check_box :active

	.row-fluid
		.control-group
			= f.label :descr, class: 'control-label'
			.controls
				= f.text_area :descr, class: 'span11' 

	.form-actions
		.btn-overlay
			= f.button t("_BTN_SAVE"), class: "btn btn-primary"
			= f.button t('_BTN_SAVE_AND_CONTINUE'), class: 'btn btn-success', name: 'continue', value: 'continue'
			= link_to t("_BTN_CANCEL"), books_path, class: "btn" 
